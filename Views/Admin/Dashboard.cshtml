@model List<auth.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Welcome, @User.Identity?.Name!</h2>
<p>This is the <strong>Admin Dashboard</strong>. You have full control over the system.</p>

<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go to Homepage</a>

<form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Logout</button>
</form>

<h3 class="mt-4">User List</h3>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>User ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Roles</td>
            </tr>
        }
    </tbody>
</table>
