@model List<auth.Models.ApplicationUser>
@{
    ViewData["Title"] = "Friends Hub";
}

<h2>Friends List</h2>

<ul>
    @foreach (var friend in Model)
    {
        <li>
            <a href="@Url.Action("Chat", "Chats", new { friendId = friend.Id })">
                @friend.UserName (@friend.Email)
            </a>
        </li>
    }
</ul>
